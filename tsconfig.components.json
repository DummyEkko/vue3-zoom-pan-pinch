{
  // 继承基础配置
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    // 组件库依赖浏览器的 DOM API
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],
    // 路径别名设置
    "paths": {
      "@vue3-zoom-pan-pinch/hooks": ["./hooks/src"],
      "vue3-zoom-pan-pinch": ["./components/src"]
    },
  },
  "include": ["components/**/*.ts", "components/**/*.d.ts", "components/**/*.tsx", "components/**/*.vue", "./hooks/src"],
  "exclude": ["components/**/*.test.ts", "components/**/*.test.tsx", "components/**/*.config.ts"]
}
